<div id="<%= dom_id semester_has_exam %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Semester:</strong>
    <%= semester_has_exam.semester_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Exam:</strong>
    <%= semester_has_exam.exam_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this semester has exam", semester_has_exam, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this semester has exam", edit_semester_has_exam_path(semester_has_exam), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
