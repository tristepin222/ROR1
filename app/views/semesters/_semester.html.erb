<div id="<%= dom_id semester %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Number:</strong>
    <%= semester.number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Years:</strong>
    <%= semester.years %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this semester", semester, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this semester", edit_semester_path(semester), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
