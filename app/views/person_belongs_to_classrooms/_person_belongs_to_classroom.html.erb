<div id="<%= dom_id person_belongs_to_classroom %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Start date:</strong>
    <%= person_belongs_to_classroom.start_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End date:</strong>
    <%= person_belongs_to_classroom.end_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Person:</strong>
    <%= person_belongs_to_classroom.person_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Classroom:</strong>
    <%= person_belongs_to_classroom.classroom_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this person belongs to classroom", person_belongs_to_classroom, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this person belongs to classroom", edit_person_belongs_to_classroom_path(person_belongs_to_classroom), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
