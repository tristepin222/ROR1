<div id="<%= dom_id person_has_subject %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Person:</strong>
    <%= person_has_subject.person_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Subject:</strong>
    <%= person_has_subject.subject_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Current class:</strong>
    <%= person_has_subject.current_class %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this person has subject", person_has_subject, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this person has subject", edit_person_has_subject_path(person_has_subject), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
